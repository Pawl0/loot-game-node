    "socket.io-client": "^4.0.0",
    "socketio-wildcard": "^2.0.0",
    "ts-node": "^10.9.1",
    "tsc": "^1.20150623.0",
    "tslib": "^2.1.0",
    "tty": "^1.0.1",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
